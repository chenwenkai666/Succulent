@model Model.Users
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    <link href="~/Content/UserCenter.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <style>
        .div-footer {
            margin-top: -50px;
            background: #f7f8fa;
        }

            .div-footer .div-middle {
                background: #f7f8fa;
            }
    </style>
    <script>
        $(function () {
            $(".tie").click(function () {
                $(".change-title").text("我发表了帖子");
            })
            $(".activity").click(function () {
                $(".change-title").text("我参加的活动");
            })
            $(".collection").click(function () {
                $(".change-title").text("我收藏的多肉");
            })
            $(".comment").click(function () {
                $(".change-title").text("我的评论");
            })
            $(".huifu").click(function () {
                $(".change-title").text("我的回复");
            })
        })
    </script>
}
<main class="main-contain">
    <div class="main-contain-top">
        <div class="user-back">
            <img @*src="~/images/usercenter-back.jpg"*@ class="back-img" width="800" height="150" /> 
            @*<div class="user-back-inner">
                <button class="user-back-inner-button">
                    <i class="fa fa-camera-retro"></i><span>上传封面照片</span>
                </button>
            </div>*@
        </div>
        <div class="user-info">
            <div class="user-info-section">
                <div class="user-info-section-photo">
                    <img src="@Model.Photo" width="160" height="160" />
                </div>              
            </div>
            <div class="user-info-details">
                <main class="user-info-details-main row">
                    <h1 class="col-md-12">@Model.UserName</h1>
                    <span class="col-md-12"><i class="fa fa-user-o"></i>&nbsp;&nbsp;&nbsp;@Model.Sex</span>
                    <span class="col-md-12"><i class="fa fa-birthday-cake"></i>&nbsp;&nbsp;&nbsp;@Model.Birth.ToString().Substring(0, 9)</span>
                    <p>
                        <span class="col-md-12">多肉宣言</span>
                        <span class="col-md-12">种下幸福，走向成功，明天会更好，加油啊，啦啦啦啦啦啦</span>
                    </p>
                </main>
            </div>
            <div class="user-info-go">
                <div class="user-info-go-bottom row">
                    @Ajax.ActionLink("编辑个人资料", "UserInfo", new { id = @Model.UserID }, new AjaxOptions { HttpMethod = "get" }, new { @class = "col-md-12" })
                </div>
            </div>
        </div>
    </div>
    <div class="main-contain-bottom">
        <div class="main-contain-bottom-dao row">
            <ul>
                <li class="col-md-2">
                    <a class="tie">发帖</a>
                </li>
                <li class="col-md-2">
                    <a class="activity">活动</a>
                </li>
                <li class="col-md-2">
                    <a class="collection">收藏</a>
                </li>
                <li class="col-md-2">
                    <a class="comment">评论</a>
                </li>
                <li class="col-md-2">
                    <a class="huifu">回复</a>
                </li>
                <li class="col-md-2">
                    <a class="more">更多</a>
                </li>
            </ul>
        </div>
        <div class="main-contain-bottom-details row" id="main-contain-bottom-details">
            <ul>
                <li class="col-md-12">
                    <h3 class="col-md-12 change-title">发表了帖子</h3>
                    <a class="col-md-9">最美的多肉头饰</a>
                    <span class="col-md-3">2017.05.03</span>
                </li>
            </ul>
        </div>
    </div>
</main>
