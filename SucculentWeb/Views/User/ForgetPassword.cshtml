@model Model.Users
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>找回密码</title>
    <link href="~/Content/ForgetPassword.css" rel="stylesheet" />
    <link href="~/Content/foundation.min.css" rel="stylesheet" />
</head>
<body>
    <!--顶部开始-->
    <div class="header">
        <div class="Logo">
            <a href="#" title="多肉网">
                <img src="../images/Logo带下文字.png" width="70" height="90" title="多肉网" />
            </a>
            <span>重置密码</span>
        </div>
        <p><a href="@Url.Action("Login","User")"> 登录</a></p>
    </div>
    <!--顶部结束-->
    <!-- 主体部分开始 -->
    <div class="main">
        @using (Html.BeginForm("ForgetPassword","User",FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <label for="UserName">账号：</label><br />
            @Html.TextBoxFor(user=>user.UserName,new { placeholder = "用户名/邮箱/手机号" })<br />
            <input type="submit" class="button success expand" value="下一步">
        }
    </div>
    <!-- 主体部分结束 -->
</body>
</html>
