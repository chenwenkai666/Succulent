@model IEnumerable<Model.Entries>
@{
    ViewBag.Title = "PhotoResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head{
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/icomoon.css" rel="stylesheet" />
    <link href="~/Content/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/salvattore.css" rel="stylesheet" />
    <link href="~/Content/PhotoResult.css" rel="stylesheet" />
    <link href="~/Content/PricePhoto.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
}

<div class="ResultMain">
    <div class="container">
        <div class="FirstPrize">
            <div class="PrizeImg">
                <img src="~/images/获奖.png" />
                <div class="UserPhoto">
                    @{
                        if (Model.First().Users.Photo != null)
                        {
                            <img src="@Model.First().Users.Photo" />
                        }
                        else
                        {
                            <img src="~/images/头像.png" />
                        }
                    }

                </div>
            </div>
            <div class="PriceFile">
                <div class="wrapper">
                    <div class="item">
                        <img src="@Model.First().Image" />
                        <div class="information">
                            <strong>《 @Model.First().TextDescription》</strong><br />
                            <b>作者：@Model.First().Users.UserName</b><br />
                            <i>赞赏：@Model.First().UpvoteNum</i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="FirstPrizeLogo">
                <img src="~/images/一等奖徽章.png" />
            </div>
            <span id="information" style="display:none">您的浏览器不支持查看3D效果</span>
        </div>
        <div class="ActivityInfo">
            <h3>@Model.First().Activity.ActivityName 评选结果</h3>
            <p>祝贺 <b>@Model.First().Users.UserName</b>  的 <b>《  @Model.First().TextDescription 》</b>作品荣获<b> 一等奖</b> ！</p>
            <p>所有获奖用户的奖品多肉网将于7个工作日内发放，请获奖用户注意查收。(多肉网承诺评选结果公平公正，多肉网保留解释权。)</p>
        </div>
        <div class="row">
            <div id="PhotoResult-board" data-columns>
                @foreach (var item in Model)
                {
                    <div class="item">
                        <div class="animate-box">
                            <a href="@item.Image" class="image-popup PhotoResult-board-img" title="@item.Users.UserName.Trim() 的作品">
                                <img src="@item.Image" alt="@item.TextDescription">
                            </a>
                        </div>
                        <div class="PhotoResult-desc">《 @item.TextDescription》-- @item.Users.UserName <br /><i>赞赏：@item.UpvoteNum</i></div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Foot{
    <script src="~/Scripts/jquery.easing.1.3.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.waypoints.min.js"></script>
    <script src="~/Scripts/jquery.magnific-popup.min.js"></script>
    <script src="~/Scripts/salvattore.min.js"></script>
    <script src="~/Scripts/PhotoResult.js"></script>
    <script type="text/javascript">
        $(function () {
            if (!Modernizr.csstransforms3d) document.getElementById('information').style.display = 'block';
        });

    </script>
}

