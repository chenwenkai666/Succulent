@model IEnumerable<Model.SucculentCategory>
@using Model

@{
    ViewBag.Title = "多肉百科";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    <link href="~/Content/Succulent.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <style>
        .div-footer {
            margin-top:50px;
            background-color: transparent;
        }

         .div-footer .div-middle {
                background-color: transparent;
            }
    </style>
    <script type="text/javascript">
        $(function () {
            $(".a-describe").click(function () {         
                $(".introduce-contain").removeClass("myClass");
                $(this).parents(".introduce-contain").addClass("myClass");                               
            })          
        })
    </script>
}
<div class="succulent-wrap">
    <div class="succulent-wrap-top">

        <div class="succulent-wrap-top-introduce row">
            <ul>
    @foreach (var item in Model)
    {      
        <li class="col-md-3">
            <div class="introduce-contain">
                <div class="introduce-contain-describe">
                    @Ajax.ActionLink(@item.SucculentCategoryName, "PartialViewDate", new { SucculentCategoryID = item.SucculentCategoryID }, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "wrap-bottom", InsertionMode = InsertionMode.Replace },new { @class="a-describe"})                  
                    </div>
                <img class="img-describe" src="~/images/succulent-img/4.png" width="38" height="38" />
                </div>
            </li>
     }
    </ul>
        </div>

    </div>
    <div id="wrap-bottom">
@{
    Html.RenderAction("PartialViewDate");
}
    </div>  
</div>
