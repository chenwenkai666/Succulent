@model Model.Shops
@{
    ViewBag.Title = "RegisterShops";
    Layout = "~/Views/Shared/ShopMall.cshtml";
}

<style>
.Main{
    width:100%;
    margin:20px auto;
}
.Main img{
    width:100%;
    height:350px;
    background-size:cover;
}
.Main .content{
    width:80%;
    height:600px;
    margin:30px auto ;
    border:1px solid #c9c9c9;

    position:relative;
}
.content .title{
    width:10%;
    height:25px;
    
    background-color:#fff;
    top:-10px;
    position:absolute;
    margin-left:45%;
}
.title p{
    font-size:25px;
    line-height:25px;
    font-family:'Microsoft Himalaya';
    text-align:center;
}
.Form{
    margin-top:30px;
    width:90%;
    height:300px;
    margin-left:5%;
}
.Form ul{
    width:100%;
    height:100%;
}
.Form ul li{
    width:100%;
    height:30px;
    margin-top:15px;
    background-color:#fff;
    font-family:'Microsoft Himalaya';
    font-size:15px;
    color:#000;
}
.Form ul li:nth-child(2) .text{
    border:1px solid #c9c9c9;
    border-radius:5px;
    width:80%;
    height:30px;
}
.miaoshu{
    width:90%;
    height:160px;
    margin-left:5%;
}
.miaoshu .textArea{
    border:1px solid #c9c9c9;
    border-radius:5px;
    width:80%;
    height:150px;
    font-size:15px;
}
.submit{
    margin-top:20px;
    width:90%;
    height:30px;
    margin-left:5%;
    border:none;
}
