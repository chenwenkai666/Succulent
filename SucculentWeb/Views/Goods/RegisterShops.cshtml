    border-radius:5px;
    background-color: #4CAF50;
    border: none;
    color: white;
    width:60px;
    height:40px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    
}*/
.button {
  display: inline-block;
  width:60px;
  height:40px;
  font-size: 16px;
  cursor: pointer;
  text-align: center;   
  text-decoration: none;
  outline: none;
  color: #fff;
  background-color: #4CAF50;
  border: none;
  border-radius: 10px;
  box-shadow: 0 5px #999;
}

.button:hover {background-color: #3e8e41}

.button:active {
  background-color: #3e8e41;
  box-shadow: 0 5px #666;
  transform: translateY(4px);
}
</style>
<div class="Main">
    <img src="~/images/商家注册横幅1.jpg" />
    <div class="content">
        <div class="title">
           <p>商家注册</p> 
        </div>
        @using (Html.BeginForm("RegisterShops", "Goods", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <div class="Form">
             <ul>
                 <li>商店名：</li>
                 @*<li><input type="text" placeholder="限制十二个字" /></li>*@
                 <li>
                     @Html.EditorFor(model => model.ShopName, new { htmlAttributes = new { @class = "text", placeholder = "不能超过十二个字" } })
                     @Html.ValidationMessageFor(shops => shops.ShopName, "", new { style = "color:#339933" })
                 </li>
                 <li>商店图标：</li>
                 <li><input type="file" name="ShopPhoto" /></li>
                 <li>顶部横幅：</li>
                 <li><input type="file" name="ShopTopImg" /></li>
             </ul>
        </div>
       <div class="miaoshu">
           @Html.TextAreaFor(model=>model.ShopDescription,new {@class = "textArea", placeholder = "填写对商店的描述" })
       </div>
       <div class="submit">
           @*<input type="submit" value="提交" class="subbtn" />*@
           <button class="button">提交</button>
       </div>
        }
    </div>
</div>
