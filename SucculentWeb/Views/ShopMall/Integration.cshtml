@{
    ViewBag.Title = "Integration";
    Layout = "~/Views/Shared/ShopMall.cshtml";
}
@section head{
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
<link href="~/Content/Integration.css" rel="stylesheet" />
<script src="~/Scripts/move-top.js"></script>
<script src="~/Scripts/jquery.easing.1.3.js"></script>
    <script type="text/javascript">
			jQuery(document).ready(function($) {
				$(".scroll").click(function(event){
					event.preventDefault();
					$('html,body').animate({scrollTop:$(this.hash).offset().top},1000);
				});
			});
</script>
<script>
			$(function() {
				var pull 		= $('#pull');
					menu 		= $('nav ul');
					menuHeight	= menu.height();
				$(pull).on('click', function(e) {
					e.preventDefault();
					menu.slideToggle();
				});
				$(window).resize(function(){
	        		var w = $(window).width();
	        		if(w > 320 && menu.is(':hidden')) {
	        			menu.removeAttr('style');
	        		}
	    		});
			});
</script>
}

<body>
    <div class="content">
        <div class="container">
            <div class="special-products">
                <div class="s-products-head">
                    <div class="s-products-head-left">
                        <h3>积分 <span>商城</span></h3>
                    </div>
                    <div class="s-products-head-right">
                        <a href="@Url.Action("Shops", "Goods", new { ShopID = 1 })"><span> </span>去商城购买</a>
                    </div>
                    <div class="clearfix"> </div>
                </div>

                <div class="special-products-grids" id="integrationgoods">
                    @{Html.RenderAction("IntegrationGoods", "ShopMall");}
                    <div class="clearfix"> </div>
                </div>
            </div>
        </div>
      </div>
        <div style="display:none">
        <script src='http://v7.cnzz.com/stat.php?id=155540&web_id=155540' language='JavaScript' charset='gb2312'></script></div>
</body>

